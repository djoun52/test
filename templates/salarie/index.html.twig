{% extends 'base.html.twig' %}

{% block title %}Liste des salariés{% endblock %}

 {% block nav %}
       	<nav class="navbar navbar-expand-lg  navbar-dark bg-dark">
		<div class="collapse navbar-collapse" id="navbarNavDropdown">
			<ul class="navbar-nav">
				<li class="nav-item active ">
					<a class="nav-link" href="{{ path('entreprise_index') }}">
						liste des entreprises</a>
				</li>
				<li class="nav-item ">
					<a class="nav-link" href="{{ path('salarie_index') }}">
						liste des salariés</a>
				</li>
            </ul>
        </div>	
	</nav>
 {% endblock %}
 
{% block body %}

    
    <a  class="btn btn-outline-primary" href="{{ path('salarie_add') }}">Ajouter un salarié</a>
    <h1>Liste des salariés</h1>

    <table class="table table-striped">
        <thead class="thead-light">
            <tr>
                <th>SALARIE</th>
                <th>ADRESSE</th>
                <th>CP</th>
                <th>VILLE</th>
                <th>DATE EMBAUCHE</th>
                <th>ENTREPRISE</th>
                <th>MODIFIER</th>
                <th>SUPPRIMER</th>
            </tr>
        </thead>
        <tbody>
            {% for salarie in salarie %}
            <tr>
                <td><a href="{{ path('salarie_show', {id: salarie.id}) }}">{{ salarie }}</a></td>
                <td>{{ salarie.adresse }}</td>
                <td>{{ salarie.cp }}</td>
                <td>{{ salarie.ville }}</td>
                <td>{{ salarie.dateEmbauche | date('d/m/Y') }}</td>
                <td><a href=" {{ path('entreprise_show', {id: salarie.entreprise.id}) }}">{{  salarie.entreprise  }}  </a></td>
                <td><a class="btn btn-warning" href="{{ path('salarie_edit', {id: salarie.id}) }}">Modifier</a></td> 
                <td><a class="btn btn-danger" href="{{ path('salarie_remove', {id: salarie.id}) }}">Supprimer</a></td> 
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
